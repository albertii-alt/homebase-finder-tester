rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    match /owners/{ownerId}/boardinghouses/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == ownerId;
    }

    match /users/{userId}/avatar/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
